    <div class="main_container">
        <table class="tabla" id="tabla">
            <thead>
            <th><i class="fas fa-user"></i> Id Egreso </th>
            <th><i class="fas fa-envelope"></i> Fecha </th>
            <th><i class="fas fa-envelope"></i> Proveedor </th>
            </thead>
            <tbody>
            {{#each egresos}}
                <tr>
                    <td> {{id}} </td>
                    <td>{{fecha}}</td>
                    <td>{{proveedor.nombre}}</td>
                </tr>
            {{/each}}
            </tbody>
        </table>

        <a href="/" class="btn-border-blue" style="">Volver</a>
        <a href="/egresos/nuevo" class="btn-border-blue" style="">Nuevo</a>
        <br><br>


            <select id="input1" class="input-select"  name="criterio">
                <option selected disabled>Seleccionar</option>
                    {{#each repoCriterios.criterios}}
                        <option value="{{id}}">{{nombre}}</option>
                    {{/each}}
            </select>

             <p id="tuvieja"> </p>

            <script>
            $(function() {
              $('#input1').change(function(){
                var a = $(this).val();
            
                $.ajax({
                  url: '/criterios/' + a,
                  success: function(data) {
                  console.log(a);
                    $('#tuvieja').text(data);
                  }
                });
              });
            });
            </script>
